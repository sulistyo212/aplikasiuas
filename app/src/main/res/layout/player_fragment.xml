<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/player"
android:layout_width="match_parent"
    android:background="@drawable/bg_awal"
android:layout_height="match_parent">

<TextView
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="PLAYER PROFILE"
    android:textColor="#ffdf00"
    android:textSize="40sp"
    android:textStyle="bold"
    />

<ImageView
    android:src="@drawable/warriorsq"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btninfo3"
    android:layout_marginTop="200dp"
    android:layout_centerHorizontal="true"/>
<TextView
    android:text="SULISTYO PRAMUDYA\n SHOOTING GUARD\n 5'6'' \n 123lb"
    android:layout_marginTop="440dp"
    android:id="@+id/mytext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:layout_centerHorizontal="true"
    android:textColor="#ffdf00"
    android:textSize="20sp"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/nikeee"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
</RelativeLayout>
